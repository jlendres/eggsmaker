#!/bin/bash 
source bin/program
cd ~/${PROGRAM}

# Create virtual environment
python3 -m venv venv_${PROGRAM}

# Install dependencies
source venv_${PROGRAM}/bin/activate

# install packages
#pip install tkinter
pip install customtkinter
pip install nuitka

echo "to activate venv use: source venv_${PROGRAM}/bin/activate"
echo "to deactivate venv use: deactivate"
